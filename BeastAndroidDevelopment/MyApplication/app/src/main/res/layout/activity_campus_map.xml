<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <WebView
        android:id="@+id/activity_campus_map_webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/activity_map_rush_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#99000000">

        <TextView
            android:id="@+id/activity_map_rush_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:textColor="#fff"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/activity_map_rush_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:textColor="#fff"/>

            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:background="#fff"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/activity_map_rush_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:textColor="#fff"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:background="#fff"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/activity_map_rush_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:textColor="#fff"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#fff"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/activity_map_rush_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:textColor="#fff"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/activity_campus_map_progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:background="?attr/colorPrimaryDark"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>